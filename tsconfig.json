{
  "compilerOptions": {
    "lib": [
      "es2017"
    ],
    "target": "es5",
    "module": "commonjs",
    "outDir": "build",
    "rootDir": "modules",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "esModuleInterop": true,
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "paths": {
      "@assets/*": ["./assets/*"],
      "@modules/*": [
        "./modules/*"
      ],
      "@modules/app/*": [
        "./modules/app/*"
      ],
      "@modules/core/*": [
        "./modules/core/*"
      ],
      "@modules/common/*": [
        "./modules/common/*"
      ],
      "@modules/auth/*": [
        "./modules/auth/*"
      ]
    },
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "extends": "expo/tsconfig.base"
}
